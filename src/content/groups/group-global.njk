---
layout: layouts/page.njk
---

{% set title = groups.global.name %}

<h1 class="title is-spaced">{{ title }}</h1>
<h2 class="subtitle">Content</h2>

<div class="container">
    <ul>
        {% for post in collections.group_global | sortByPageOrder %}
          <li>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
                <p> {{ post.data.description }} </p>
          </li>
        {% endfor %}
    </ul>    
</div>
