<div class="container">
    
        {% for key, val in blocks %}
            
                <div class="card">                    
                    <div class="card-content">
                        <p class="subtitle">
                            {{ val.header }}
                        </p>
                        <div class="content">
                            <p {% if key == "block_d" %} style="color:green" {% endif %}>{{ val.name }}</p>
                        </div>
                    </div>
                    <footer>
                        <a href="{{ val.ref }}" class="card-footer-item">Continue reading</a>
                    </footer>
                </div>                
                      
        {% endfor %}
    
</div>