---
layout: "layouts/base.njk"
---

<link rel="stylesheet" href="/styles/back-button.css">

<button onclick="topFunction()" id="back_btn" class="button is-success back-to-top-button desktop">
    <span class="icon">
        <i class="fa-solid fa-arrow-up"></i>
    </span>
</button>

<article class="page-layout">
    <div class="container">
        <div class="columns">
            <div class="column is-8 is-offset-2">                
                <div class="content m-5" data-pagefind-body>
                    <h1 class="title">{{ title }}</h1>
                    
                    <hr class="solid">
                    
                    <div class="toc">
                        {{ content | toc | safe }}
                    </div>
                    
                    <hr class="solid">

                    {{ content | safe }}
                </div>
            </div>

        </div>
    </div>
</article>

<script  type="text/javascript">
    // Get the button element
    var mybutton = document.getElementById("back_btn");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function() {scrollFunction()};

    function scrollFunction() {
        if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0; // For Safari
        document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    }
</script>