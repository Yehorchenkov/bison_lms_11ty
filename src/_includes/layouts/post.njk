---
layout: layouts/base.njk
---

<section class="page-layout">
    <div class="container">
        <div class="columns">
            <div class="column content is-one-quarter">
                {% include "side-menu.njk" %}
            </div>
            <div class="column content is-two-thirds">
                <article class="content mt-5 ml-2 mr-1">
                    <h1 class="title">{{ title }}</h1>
                    
                    {{ content | safe }}
                    
                </article>
                <nav class="pagination mb-3" role="navigation" aria-label="pagination">
                    {% set nextPost = collections.notes | sortByPageOrder | getNextCollectionItem(page) %}                    
                    {% if nextPost %}
                        <a class="pagination-next" title="{{ nextPost.data.title }}" href="{{ nextPost.url }}">Next</a>
                    {% else %}
                        <a class="pagination-next is-disabled">Next</a>
                    {% endif %} 

                    {% set previousPost = collections.notes | sortByPageOrder | getPreviousCollectionItem(page) %} 
                    {% if previousPost %}
                        <a class="pagination-previous" title="{{ previousPost.data.title }}" 
                           href="{{ previousPost.url }}"> Previous</a>
                    {% else %}
                        <a class="pagination-previous is-disabled">Previous</a>
                    {% endif %}
                </nav>
            </div>
        </div>
    </div>
</section>