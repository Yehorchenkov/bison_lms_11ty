<div class="columns">
    <div class="column is-8 is-offset-2">                
        <div class="content m-5 has-text-justified" data-pagefind-body>

            <h1 class="title">{{ title }}</h1>            

            <hr class="solid">

            <div class="is-hidden-desktop">
                <div class="toc-list">
                    {{ content | toc | safe }}
                </div>
                        
                <hr class="solid">
            </div>
           
           {{ content | safe }}

        </div>
    </div>
    
    <div class="column is-2">
        <aside class="menu menu-stick mt-3 is-hidden-touch">        
            <p class="has-text-success">On this page</p>
            <div class="is-normal toc-list is-size-7">
                {{ content | toc | safe }}
            </div>
        </aside>
    </div>

</div>

<script src="/assets/highlight-toc.js"></script>

